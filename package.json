{
  "name": "vega",
  "version": "1.0.0",
  "description": "A vulnerability identification tool",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node ./dist/src/index.js",
    "sanityTests": "newman run ./test/sanity/SanityTests.postman_collection.json",
    "test": "jest; npm run sanityTests",
    "prettier": "npx prettier --write .",
    "doc": "npx typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-arnott/Vega.git"
  },
  "author": "Zoe Arnott",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/z-arnott/Vega/issues"
  },
  "homepage": "https://github.com/z-arnott/Vega#readme",
  "dependencies": {
    "@types/express-fileupload": "^1.4.1",
    "axios": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "babel-jest": "^29.3.1",
    "dotenv-webpack": "^8.0.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "fast-xml-parser": "^4.0.12",
    "fs": "^0.0.1-security",
    "newman": "^5.3.2",
    "prettier": "2.8.1",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4",
    "winston": "^3.8.2"
  },
  "jest": {
    "roots": [
      "dist"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "moduleNameMapper": {
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  }
}
